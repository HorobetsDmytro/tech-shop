@model tech_shop.Models.Product

<h1>Product Details</h1>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
        <dt class="col-sm-2">Stock Quantity</dt>
        <dd class="col-sm-10">@Model.StockQuantity</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@((ViewBag.Categories as List<tech_shop.Models.Category>)?.FirstOrDefault(c => c.Id == Model.CategoryId)?.Name)</dd>
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10"><img src="@Model.ImageUrl" alt="@Model.Name" width="100" height="100" /></dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
</div>