@model IEnumerable<tech_shop.Models.Product>

@{
    ViewData["Title"] = "Home Page";
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
    string currentSortOrder = ViewBag.SortOrder;
    int? currentCategoryId = ViewBag.CategoryId;
}

<div class="container">
    <h1 class="my-4">Our Products</h1>

    <div class="row mb-3">
        <div class="col-md-6">
            <form asp-action="Index" method="get" class="form-inline">
                <label class="mr-2">Sort by:</label>
                <select name="sortOrder" class="form-control mr-2" onchange="this.form.submit()">
                    <option value="">Default</option>
                    <option value="price_asc" selected="@(currentSortOrder == "price_asc")">Price: Low to High</option>
                    <option value="price_desc" selected="@(currentSortOrder == "price_desc")">Price: High to Low</option>
                </select>
                <input type="hidden" name="categoryId" value="@currentCategoryId" />
            </form>
        </div>
        <div class="col-md-6">
            <form asp-action="Index" method="get" class="form-inline">
                <label class="mr-2">Filter by Category:</label>
                <select name="categoryId" class="form-control mr-2" onchange="this.form.submit()">
                    <option value="">All Categories</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Id" selected="@(currentCategoryId == category.Id)">@category.Name</option>
                    }
                </select>
                <input type="hidden" name="sortOrder" value="@currentSortOrder" />
            </form>
        </div>
    </div>

    @for (int i = 0; i < Model.Count(); i += 4)
    {
        <div class="row mb-4">
            @foreach (var product in Model.Skip(i).Take(4))
            {
                <div class="col-md-3">
                    <div class="card h-100">
                        <img src="@product.ImageUrl" class="card-img-top" style="height: 200px; object-fit: contain;" alt="@product.Name">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Price.ToString("C")</p>
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            @if (currentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1, sortOrder = currentSortOrder, categoryId = currentCategoryId })" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, sortOrder = currentSortOrder, categoryId = currentCategoryId })">@i</a>
                </li>
            }
            @if (currentPage < totalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1, sortOrder = currentSortOrder, categoryId = currentCategoryId })" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>