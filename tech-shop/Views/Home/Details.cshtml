@model tech_shop.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid">
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <h2>@Model.Price.ToString("C")</h2>
            <p>@Model.Description</p>
            <button class="btn btn-primary btn-lg">Buy Now</button>
        </div>
    </div>
</div>